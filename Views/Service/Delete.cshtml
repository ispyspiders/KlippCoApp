@model KlippCoApp.Models.Service

@{
    ViewData["Title"] = "Radera tjänst";
    Layout = "_AdminLayout";
    ViewData["BodyClass"] = "admin-page";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <h3>Är du säker på att du vill ta bort denna tjänst?</h3>
    <hr />
    <div>
        <h4> @Html.DisplayFor(model => model.Name)
        </h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Radera" class="btn btn-danger mb-4" />
        </form>
            <a asp-action="Index">Tillbaka till tjänster</a>
    </div>
</div>
