@model BookingViewModel

@{
    Console.WriteLine(ViewData);
    ViewData["Title"] = "Tack för din bokning!";
}

<div class="banner d-flex justify-content-center align-items-center">
    <div class="container">
        <img src="~/images/Klipp&Co.svg" alt="Logo" class="img-fluid">
        <h1 class="h1 mt-4 text-light">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container">
    <div class="mt-4 bg-light rounded p-4">
        <h2>Bokningsdetaljer</h2>
        <p>Tjänst: @Model.ServiceName</p>
        <p>Stylist: @Model.StylistName</p>
        <p>Tid: @Model.BookingTime</p>

        <div class="progress mb-3">
            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100"
                aria-valuemin="0" aria-valuemax="100"></div>
        </div>

    </div>
</div>