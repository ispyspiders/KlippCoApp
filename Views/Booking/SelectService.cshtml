@model List<Service>

@{
    ViewData["Title"] = "Boka";
}

<div class="banner d-flex justify-content-center align-items-center">
    <div class="container">
        <img src="~/images/Klipp&Co.svg" alt="Logo" class="img-fluid">
        <h1 class="h1 mt-4 text-light">@ViewData["Title"]</h1>
    </div>
</div>

<div class="container">
    <form asp-action="SelectService" method="post" class="mt-4 bg-light rounded p-4">
        <h2>1. Välj tjänst</h2>
        <div class="progress mb-3">
            <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25"
                aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="form-group mb-5">
            <label for="serviceId">Tjänst</label>
            <select name="serviceId" class="form-control" required>
                <option value="">Välj en tjänst</option>
                @foreach (var service in Model)
                {
                    <option value="@service.Id">@service.Name - @service.Price SEK</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Fortsätt</button>
    </form>
</div>
